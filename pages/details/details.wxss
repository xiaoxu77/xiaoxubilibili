.main{
  padding: 0rpx;
  color: #666;
}



.video_info{
  margin-top: 10rpx;
}
.video_title{
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;

}

.video_details{
  margin-top: 10rpx;
  font-size: 25rpx;

}

.video_details text{
  margin-left: 25rpx;
}

.video_details .author{
  color: black;
  margin-left: 0;
}


.video_info video{
  width: 100%;
}



/* 推荐视频 */
.other_list{
  margin-top: 10rpx;
}

.item_other{
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;

  
}
.other_img_wrap{
  width: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.other_img_wrap image{
  width: 90%;
  border-radius: 5rpx;
  
}
.other_detail{
  width: 65%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.other_title{
  font-size: 28rpx;
  color: #e06f93;
}
.other_vc{
  font-size: 25rpx;
  color: #666;
}


/* 推荐视频水平分割线 */
.details_line{
  background-color: #E0e3da;
  width: 100%;
  height: 5rpx;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
}



/* 评论列表 */
.comment_wrap{
  margin-top: 10rpx;
}
.comment_title{
  padding: 10rpx;
  font-size: 28rpx;

}
.comment_list{
  padding: 0;
}
.comment_item{
  margin-bottom: 10rpx;
  padding: 10rpx;
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #666;
}

.comment_user{
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;

}

.comment_user image{
  width: 60%;
}

.comment_info{
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.comment_detail{
  display: flex;
  justify-content: space-between;
}

.comment_detail .author{
  font-size: 25rpx;
  color: #666;
}
.comment_detail .date{
  font-size: 25rpx;
  color: #666;
}

.comment_content{
  font-size: 25rpx;
  color: black;
}